{
  "name": "energyiran-2",
  "version": "1.0.0",
  "description": "A minimal web project template featuring a simple HTML, CSS, and JavaScript setup. Ideal for quick prototypes or learning purposes.",
  "main": "server.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "node server.js",
    "pretest": "echo '🔍 Running Jest test suite...'",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "ci:test": "npm run test -- --ci --runInBand",
    "pree2e": "node -e \"console.log('Cypress started in headless mode')\"",
    "e2e": "echo \"🚀 Starting Cypress in headless mode ($npm_lifecycle_event)\" && cypress run --headless --browser chrome",
    "e2e:ci": "echo \"🚀 Starting Cypress in headless mode ($npm_lifecycle_event)\" && cypress run --headless --browser electron",
    "install:chrome": "bash scripts/install-chrome.sh",
    "e2e:chrome": "npm run install:chrome && cypress run --headless --browser chrome",
    "lint": "eslint 'src/**/*.js'",
    "format": "prettier --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.11",
    "babel-jest": "^30.0.0",
    "cypress": "^13.6.4",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.4",
    "xvfb": "^0.4.0"
  },
  "__comment": "Use npm run test to execute all tests"
}
