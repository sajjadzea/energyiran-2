{
  "name": "energyiran-2",
  "version": "1.0.0",
  "description": "A minimal web project template featuring a simple HTML, CSS, and JavaScript setup. Ideal for quick prototypes or learning purposes.",
  "main": "server.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "node server.js",
    "test": "jest --config jest.config.js --runInBand",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "ci:test": "npm run test -- --ci --runInBand",
    "pree2e": "node -e \"console.log('Cypress started in headless mode')\"",
    "e2e": "xvfb-run -a -- cypress run --headless --browser chrome",
    "e2e:ci": "cypress run --headless --browser chrome"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    }
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "babel-jest": "^30.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0",
    "supertest": "^6.3.4",
    "cypress": "^13.6.4"
  },
  "__comment": "Use npm run test to execute all tests"
}
