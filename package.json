{
  "name": "energyiran-2",
  "version": "1.0.0",
  "description": "Full-stack template using Express backend with a React frontend.",
  "main": "server.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "prestart": "npm --prefix mvp run build",
    "start": "node server.js",
    "pretest": "echo '🔍 Running Jest test suite...'",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "ci:test": "npm run test -- --ci --runInBand",
    "pree2e": "node -e \"console.log('Cypress started in headless mode')\"",
    "e2e": "echo \"🚀 Starting Cypress in headless mode ($npm_lifecycle_event)\" && cypress run --headless --browser chrome",
    "e2e:ci": "echo \"🚀 Starting Cypress in headless mode ($npm_lifecycle_event)\" && cypress run --headless --browser electron",
    "install:chrome": "bash scripts/install-chrome.sh",
    "e2e:chrome": "npm run install:chrome && cypress run --headless --browser chrome",
    "lint": "eslint \"mvp/src/**/*.js\" mvp/vite.config.js --quiet",
    "format": "prettier --write \"mvp/**/*.html\" \"mvp/src/**/*.{js,jsx}\"",
    "dev": "npm --prefix mvp run dev",
    "build": "npm --prefix mvp run build",
    "preview": "npm --prefix mvp run preview",
    "release": "semantic-release"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@eslint/eslintrc": "^1.4.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.11",
    "babel-jest": "^30.0.0",
    "chart.js": "^4.4.9",
    "cypress": "^13.6.4",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0",
    "prettier": "^2.8.8",
    "supertest": "^6.3.4",
    "vite": "^6.3.5",
    "xvfb": "^0.4.0"
  },
  "__comment": "Use npm run test to execute all tests",
  "comment": "added release script for semantic-release"
}
